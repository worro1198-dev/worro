<body>
  <div class="container">
    <h2>염색약 계산기</h2>
    <label>총량(g):
      <input type="number" id="total" value="200" min="1" step="any">
    </label>
    <label>A 비율:
      <input type="number" id="ratioA" value="1" min="1" step="any">
    </label>
    <label>B 비율:
      <input type="number" id="ratioB" value="3" min="1" step="any">
    </label>
    <!-- iOS Safari 대응: 버튼 타입 명시 -->
    <button type="button" onclick="calculate()">계산</button>
    <p id="result"></p>
  </div>
  <script>
    function calculate() {
      let total = parseFloat(document.getElementById('total').value);
      let A = parseFloat(document.getElementById('ratioA').value);
      let B = parseFloat(document.getElementById('ratioB').value);
      if(isNaN(total) || isNaN(A) || isNaN(B) || total <= 0 || A <= 0 || B <= 0){
          document.getElementById('result').innerText = "올바른 값을 입력하세요.";
          return;
      }
      let amountA = total * (A/(A+B));
      let amountB = total * (B/(A+B));
      document.getElementById('result').innerText =
          `A염색약: ${amountA.toFixed(1)}g, B염색약: ${amountB.toFixed(1)}g`;
    }
  </script>
